                    </ul>
                    <div class="tab-content">
                        <div id="tab-new" class="tab-pane active">
                            @Html.Partial("_LstBiddingNewsNewest")
                        </div>
                        <div id="tab-qt" class="tab-pane">
                            @Html.Partial("_LstBiddingNewsInterest")
