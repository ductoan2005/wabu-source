@model FW.ViewModels.UserMasterVM

@{
    var listUserInvestor = ViewBag.listUserInvestor;
    var pagingUserInvestor = ViewBag.pagingUserInvestor;

    string jsonDataUserInvestor = "{}";
    if (pagingUserInvestor != null)
    {
        ViewData["CurrentPageInvestor"] = pagingUserInvestor.CurrentPage;
        ViewData["ItemsPerPageInvestor"] = pagingUserInvestor.ItemsPerPage;
        ViewData["TotalItemsInvestor"] = pagingUserInvestor.TotalItems;
    }
    else
    {
        ViewData["CurrentPageInvestor"] = 0;
        ViewData["ItemsPerPageInvestor"] = 1;
        ViewData["TotalItemsInvestor"] = 0;
    }
}

<div class="full-height-scroll">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tbody>
                @if (listUserInvestor != null)
                {
                    int i = 0;
                    Dictionary<string, Object> dicUI = new Dictionary<string, object>();
                    foreach (var item in listUserInvestor)
                    {
                        string keyUI = "keyUI_" + ++i + "_" + pagingUserInvestor.CurrentPage * pagingUserInvestor.ItemsPerPage;
                        dicUI.Add(keyUI, item);

                        <tr id="@keyUI">
                            <td class="client-avatar"><a onclick="userMaster.displayAccountDetail(event, '@item.Id')"><img alt="image" src="@item.AvatarPath"></a></td>
                            <td><a data-toggle="tab" onclick="userMaster.displayAccountDetail(event, '@item.Id')" class="client-link">@item.FullName</a></td>
                            <td class="contact-type"><i class="fa fa-user"></i></td>
                            <td>@item.UserName</td>
                            @if (@item.IsActive == true)
                            {
                                <td class="client-status"><span class="label label-primary">hoạt động</span></td>
                            }
                            else
                            {
                                <td class="client-status"><span class="label label-danger">tạm ngưng</span></td>
                            }
                            <td><a href="#" onclick="userMaster.deleteUser('@keyUI');"><i class="fa fa-times text-danger font_20"></i></a></td>
                        </tr>

                        jsonDataUserInvestor = Newtonsoft.Json.JsonConvert.SerializeObject(dicUI);
                    }
                }
            </tbody>
        </table>
        @Html.Partial("_PagingTabInvestor")
    </div>
</div>

<script>
    var jsonDataUserInvestorJS = @Html.Raw(jsonDataUserInvestor);
</script>