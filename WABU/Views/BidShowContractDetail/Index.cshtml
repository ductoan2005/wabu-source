        $(document).ready(function () {
            //var company = company;
            //$("#pop-up-evaluate").modal('show');
            /* 1. Visualizing things on Hover - See next part for action on click */
            $('#stars li').on('mouseover', function () {
                var onStar = parseInt($(this).data('value'), 10); // The star currently mouse on

                // Now highlight all the stars that's not after the current hovered star
                $(this).parent().children('li.star').each(function (e) {
                    if (e < onStar) {
                        $(this).addClass('hover');
                    }
                    else {
                        $(this).removeClass('hover');
                    }
                });

            }).on('mouseout', function () {
                $(this).parent().children('li.star').each(function (e) {
                    $(this).removeClass('hover');
                });
            });

            var bidCloseDateVal = $("#bidCloseDateVal").val();
            $('#countdownBidCloseDate').countdown(bidCloseDateVal,
                function (event) {
                    $(this).html(event.strftime('%D ngày %H:%M:%S'));
                });

            var dateInvestorSelected = $("#dateInvestorSelectedVal").val();
            $('#countdownDateInvestorSelected').countdown(dateInvestorSelected,
                function (event) {
                    $(this).html(event.strftime('%H:%M:%S'));
                });

            /* 2. Action to perform on click */
            $('#stars li').on('click', function () {
                var onStar = parseInt($(this).data('value'), 10); // The star currently selected
                var stars = $(this).parent().children('li.star');

                for (i = 0; i < stars.length; i++) {
                    $(stars[i]).removeClass('selected');
                }

                for (i = 0; i < onStar; i++) {
                    $(stars[i]).addClass('selected');
                }

                var ratingValue = parseInt($('#stars li.selected').last().data('value'), 10);
                var msg = "";
                if (ratingValue > 4) {
                    msg = "Cảm ơn bạn! Bạn đã đánh giá " + ratingValue + " sao cho chúng tôi.";
                }
                else if (ratingValue > 2) {
                    msg = "Cảm ơn bạn! Bạn đã đánh giá " + ratingValue + " sao, chúng tôi sẽ nổ lực hơn nữa để phục vụ bạn tốt hơn.";
                }
                else {
                    msg = "Chúng tôi sẽ phát triển hơn nữa trong tương lai để phục vụ bạn tốt hơn.";
                }
                responseMessageRatingStar(msg);
            });

            bidShowContractDetail.downloadRequiredDocument();

        });

        function RatingStarForCompany() {
            var ratingValue = parseInt($('#stars li.selected').last().data('value'), 10);

            $.ajax({
                type: "POST",
                url: "/BidShowContractDetail/RatingStarForCompany",
                data: { companyProfileId: $('input[name=companyProfileId]').val(), star: ratingValue },
                success: function (responsed) {
                    if (responsed && responsed.result === "0") {

                    }
                }
            });
        }

        function ChooseContractor() {
            if ($('input[name=biddingNewsId]').val() != "") {


                var data = {
                    biddingNewsId: $('input[name=biddingNewsId]').val(),
                    companyProfileId: $('input[name=companyProfileId]').val()
                };

                $.ajax({
                    type: "POST",
                    url: "/BidShowContractDetail/ChooseContractorBidding",
                    data: data,
                    success: function (responsed) {
                        if (responsed && responsed.succeed === "0") {
                            toastr.success("Chọn nhà thầu thành công, hệ thống đã tự động gửi đến nhà thầu Thông báo trúng thầu và thông tin liên hệ của bạn.");
                            $(".select_contruct").addClass("hide");
                            $(".select_confirm").removeClass("hide");
                            //$(".content-success").removeClass("hide");
                            //toastr.warning("");
                        }
                        else if (responsed && responsed.succeed === "1") {
                            toastr.warning("Chủ đầu tư đã chọn nhà thầu");
                        }
                        else {
                            toastr.error(responsed);
                        }
                    }
                });
            }
            else {
                toastr.error("Chưa chọn gói thầu");
            }
        }

        function CancelContractor() {
            if ($('input[name=biddingNewsId]').val() != "") {
                var data = {
                    biddingNewsId: $('input[name=biddingNewsId]').val(),
                    companyProfileId: $('input[name=companyProfileId]').val()
                };

                $.ajax({
                    type: "POST",
                    url: "/BidContractionDetail/CancelContractorBidding",
                    data: data,
                    success: function (responsed) {
                        if (responsed && responsed.succeed === "0") {
                            toastr.success("Hủy chọn nhà thầu thành công");
                            $(".select_contruct").removeClass("hide");
                            $(".select_confirm").addClass("hide");
                        }
                        else if (responsed && responsed.succeed === "1") {
                            toastr.warning("Nhà đầu tư đã chọn nhà thầu");
                        }
                        else {
                            toastr.error(responsed);
                        }
                    }
                });
            }
            else {
                toastr.error("Chưa chọn gói thầu");
            }
        }

        function ConfirmContractor() {
            if ($('input[name=biddingNewsId]').val() != "") {
                var data = {
                    biddingNewsId: $('input[name=biddingNewsId]').val(),
                    companyProfileId: $('input[name=companyProfileId]').val()
                };

                $.ajax({
                    type: "POST",
                    url: "/BidContractionDetail/ConfirmContractorBidding",
                    data: data,
                    success: function (responsed) {
                        if (responsed && responsed.succeed === "0") {
                            toastr.success("Xác nhận hợp đồng thành công");
                            $(".select_contruct").addClass("hide");
                            $(".select_confirm").addClass("hide");

