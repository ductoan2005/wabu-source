@{
    var filterBiddingNewsVmList = ViewBag.filterBiddingNewsVmList;
    var pagingFilterBiddingResult = ViewBag.pagingFilterBiddingResult;

    var currentPage = filterBiddingNewsVmList != null ? (int)pagingFilterBiddingResult.CurrentPage : 0;

    var maxPageShow = 5;

    int totalPage = pagingFilterBiddingResult.TotalPages;
    if (totalPage > 0 && currentPage > totalPage)
    {
        currentPage = totalPage;
    }
    var halfPage = maxPageShow / 2;
    var startPage = currentPage - halfPage;
    if (startPage < 1)
    {
        startPage = 1;
    }
    var endPage = currentPage + halfPage;
    if (endPage > totalPage)
    {
        endPage = totalPage;
    }
}
<table id="filterBiddingTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            @*<th>ID</th>*@
            <th>Tên Công trình</th>
            <th>Tên Gói Thầu</th>
            <th>Ngày Tạo</th>
            <th>Chủ Đầu Tư</th>
            <th>Ngày Kết Thúc</th>
            <th>Trạng Thái</th>
            <th>Hạnh Động</th>
        </tr>
    </thead>
    <tbody>
        @if (filterBiddingNewsVmList != null)
        {
            foreach (var item in filterBiddingNewsVmList)
            {
                <tr>
                    @*<td class="center">@item.Id</td>*@
                    <td class="center">@item.ConstructionVM.ConstructionName</td>
                    <td class="center">@item.BiddingPackageVM.BiddingPackageName</td>
                    <td class="center dateInserted" data-value="@item.DateInserted">@item.DateInserted.ToString("dd/MM/yyyy hh:mm:ss")</td>
                    <td class="center">@item.ConstructionVM.InvestorName</td>

                    <td class="center bidCloseDateVal" data-value="@item.BidCloseDate">@item.BidCloseDate.ToString("dd/MM/yyyy hh:mm:ss")</td>
                    <td class="center">
                        <i class="fa fa-toggle-@(item.IsActived ? "on" : "off") switchActive"></i>
                    </td>
                    <td class="center">
                        <a href="@Url.Action("Index", "BidContractionDetail", new { id = item.Id})">Xem</a> |
                        <a href="#" class="@(item.IsActived ? "hidden" : "")" data-value="true" onclick="filterBiddingNews.updateActiveStatus(event, @item.Id)">Duyệt tin</a>
                        <a href="#" class="@(item.IsActived ? "" : "hidden")" data-value="false" onclick="filterBiddingNews.updateActiveStatus(event, @item.Id)">Hủy duyệt tin</a> |
                        <a href="#" onclick="filterBiddingNews.deleteNews(event, @item.Id)">Xóa tin</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>