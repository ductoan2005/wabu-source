@model FW.ViewModels.BiddingNewsVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Duyệt Tin</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/usermaster">Home</a>
            </li>
            <li class="active">
                <strong>Duyệt Tin</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tìm Kiếm Tin Thầu</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Ngày Tạo Tin</label>
                            <div class="col-md-3" id="dateCreate">
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="dateCreateP" name="dateCreateP">
                                </div>
                            </div>
                            <label class="col-md-2 control-label">Trạng thái tin thầu </label>
                            <div class="col-md-3" id="biddingNewsStatus">
                                <div class="input-group date">
                                    @Html.EnumDropDownListFor(m => m.EnumStatusBidding, new { @class = "form-control", @Name = "biddingNewsStatus" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Ngày Bắt Đầu</label>
                                <div class="col-md-3" id="dateStart">
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" id="dateStartP" class="form-control" name="dateStartP">
                                    </div>
                                </div>
                                <label class="col-md-2 control-label">Ngày Kết Thúc</label>
                                <div class="col-md-3" id="dateEnd">
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" id="dateEndP" class="form-control" name="dateEndP">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Trạng Thái</label>
                            <div class="col-md-3" id="fiterbidding">
                                <input type="checkbox" class="js-switch" id="fiterbiddingP" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit" id="searchFilterBidding" onclick="filterBiddingNews.filterBiddingNewsSearch(event, true)">Tìm Kiếm</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        @Html.Partial("_FilterBiddingResult")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
