@model FW.ViewModels.ConstructionVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    var selectListConstructionForm = ViewBag.selectListConstructionForm;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Duyệt Tin</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/usermaster">Home</a>
            </li>
            <li class="active">
                <strong>Quản lý công trình</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tìm Kiếm Công Trình</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Tên công trình </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="ConstructionName" name="ConstructionName">
                            </div>
                            <label class="col-md-2 control-label">Chủ đầu tư </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="InvestorName" name="InvestorName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Địa điểm XD </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="AddressBuild" name="AddressBuild">
                            </div>
                            <label class="col-md-2 control-label">Khu vực </label>
                            <div class="col-md-3">
                                <select class="form-control" id="AreaId" name="AreaId" tabindex="2"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Số tầng lầu </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="Scale" name="Scale">
                            </div>
                            <label class="col-md-2 control-label">Số tầng hầm </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="Basement" name="Basement">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Tổng DT sàn XD </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="AcreageBuild" name="AcreageBuild">
                            </div>
                            <label class="col-md-2 control-label">Hình thức XD </label>
                            <div class="col-md-3">
                                @Html.DropDownList("ConstructionForm", new SelectList(selectListConstructionForm as System.Collections.IEnumerable, "Value", "Text"),
                                         new
                                         {
                                             @class = "form-control",
                                             tabindex = "2"
                                         })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Ngày cấp GPXD</label>
                                <div class="col-md-3" id="BuildingPermitDate">
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" id="BuildingPermitDateTime" class="form-control" name="BuildingPermitDateTime">
                                    </div>
                                </div>
                                <label class="col-md-2 control-label">Email</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control" id="Email" name="Email">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Người liên hệ </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="ContactName" name="ContactName">
                            </div>
                            <label class="col-md-2 control-label">Số điện thoại </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="ContactPhoneNumber" name="ContactPhoneNumber">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit" id="searchFilterBidding" onclick="constructionManagement.filterConstructionSearch(event)">Tìm Kiếm</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        @Html.Partial("_FilterConstructionResult")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/app/AreaManage/areaManageJS.js"></script>
    <script src="~/Scripts/app/ConstructionManagement/constructionManagement.js"></script>
    <script>
        $(document).ready(function () {

            $("#ConstructionForm").val('');

            //Init Construction search page result
            constructionManagement.initConstructionSearchResult(event);

            $('#BuildingPermitDate .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: false,
                autoclose: true,
                format: "dd/mm/yyyy"
            });

            areaManageJS.getArea();

            var o = new Option("Vui lòng chọn khu vực", "");
            /// jquerify the DOM object 'o' so we can use the html method
            $(o).html("Vui lòng chọn khu vực");
            $("#AreaId").append(o);

        })
    </script>
}