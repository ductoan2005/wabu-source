@{
    var filterPostVmList = ViewBag.filterPostVmList;
    var pagingFilterPostResult = ViewBag.pagingFilterPostResult;

    var currentPage = filterPostVmList != null ? (int)pagingFilterPostResult.CurrentPage : 0;

    var maxPageShow = 5;

    int totalPage = pagingFilterPostResult.TotalPages;
    if (totalPage > 0 && currentPage > totalPage)
    {
        currentPage = totalPage;
    }
    var halfPage = maxPageShow / 2;
    var startPage = currentPage - halfPage;
    if (startPage < 1)
    {
        startPage = 1;
    }
    var endPage = currentPage + halfPage;
    if (endPage > totalPage)
    {
        endPage = totalPage;
    }
}

<table id="filterPostTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Tên bài viết
            </th>
            <th>
                Người đăng tin
            </th>
            <th>
                Nội dung
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Ngày cập nhật
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (filterPostVmList != null)
        {
            foreach (var item in filterPostVmList)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Username
                    </td>
                    <td>
                        @item.Content
                    </td>
                    <td>
                        @item.IsDeleted
                    </td>
                    <td>
                        @item.DateInserted
                    </td>
                    <td>
                        @item.DateUpdated
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>