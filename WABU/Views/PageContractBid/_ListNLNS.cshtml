@{
    var companyAbilityHrList = ViewBag.companyAbilityHrList;
}
<thead>
    <tr>
        <th></th>
        <th>Họ tên</th>
        <th>Chức danh</th>
        <th>Bằng cấp</th>
    </tr>
</thead>
<tbody>
    @if (companyAbilityHrList != null)
    {
        var maxItemQuantity = companyAbilityHrList.Count <= 3 ? companyAbilityHrList.Count : 3;
        for (int i = 0; i < maxItemQuantity; i++)
        {
            <tr class="footable-even" style="">
                <td><input type="checkbox" class="i-checks XHS_NLNS" name="input[]" value="@companyAbilityHrList[i].Id"></td>
                <td class="footable-visible footable-first-column">
                    <span class="footable-toggle"></span>
                    <a onclick="pageContractBid.getCompanyAbilityHrDetail(@companyAbilityHrList[i].Id)">
                        @companyAbilityHrList[i].FullName
                    </a>
                </td>
                <td class="footable-visible">
                    @companyAbilityHrList[i].Title
                </td>
                <td class="footable-visible">
                    @companyAbilityHrList[i].Certificate
                </td>
            </tr>
        }
    }
</tbody>